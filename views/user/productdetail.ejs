

    <%- include('../partials/usernav')%>



    <style>
        body {
            background-color: #fff;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            margin: auto;
            max-width: 1200px;
            display: flex;
            flex-wrap: wrap;
            justify-content: center; 
            gap: 20px; /* Add gap between elements */
            position: relative;
        }

        .small-images-container {
            display: flex;
            flex-direction: column;
            align-items: center; 
            width: 100%;
            max-width: 300px; 
            position: sticky;
            top: 20px; 
        }

        .small-image {
            margin: 5px 0; 
            max-width: 50px; 
            width: 100%;
            height: 50px; 
            cursor: pointer;
        }

        .card-container {
            width: 100%;
            max-width: 350px; 
            background-color: #f1f2f7;
            position: relative;
            overflow: hidden;
            height: 500px; 
        }

        .card-img-top {
            object-fit: cover;
            width: 100%;
            max-height: 500px;
            border-radius: 0;
        }

        .product-info {
            flex: 1;
            max-width: 400px; 
            padding: 20px;
            text-align: center;
            box-sizing: border-box;
            border: 1px solid #000;
            height: 500px;
        }

        .add-to-cart-btn {
            background-color: #8bb17f;
            margin-top: 20px;
            width: 100%;
            max-width: 200px;
            border: 1px solid #000;
            margin-left: auto;
            margin-right: auto;
        }

        @media (max-width: 768px) {
            .small-images-container {
                align-items: center;
                max-width: 100%; 
                position: relative; 
                top: 0;
            }

            .card-container,
            .product-info {
                max-width: 100%; 
            }

            .add-to-cart-btn {
                max-width: 100%;
            }
        }
    </style>
    </head>

    <body>

    <div class="container">
        
        <div class="small-images-container mt-5" id="smallImagesContainer">
            <div class="small-image ms-5">
                <img src="/productimages/<%=productData.images[1].filename %>""
                    class="card-img-top" alt="Image for Card 1" id="">
            </div>

            <div class="small-image mt-5 ms-5">
                <img src="/productimages/<%=productData.images[2].filename %>""
                    class="card-img-top" alt="Image for Card 2">
            </div>

            <div class="small-image mt-5 ms-5">
                <img src="/productimages/<%=productData.images[3].filename %>""
                    class="card-img-top" alt="Image for Card 3">
            </div>

            <div class="small-image mt-5 ms-5">
                <img src="/productimages/<%=productData.images[4].filename %>"
                    class="card-img-top" alt="Image for Card 4">
            </div>
        </div>


        <div class="card-container mt-5">
            
            <img id="mainImage" class="card-img-top" style="margin-top: 0;"
                src= "/productimages/<%=productData.images[0].filename %>""
                alt="Card image cap">
        </div>

        <!-- Product info container -->
        <div class="product-info mt-5">
            <h5 style="font-weight: bold;"><%= productData.name %></h5>
            <p class="in-stock">In Stock</p>
            <p style="font-weight: bolder;">Rs.<%= productData.price %> </p>
            <p class="product-description">•<%= productData.highlight1 %></p>
            <p class="product-description">•<%= productData.highlight2 %></p>
            <p class="product-description">•<%= productData.highlight3 %></p>
            <p class="product-description">•<%= productData.highlight4 %></p>
    

     
            <p class="color-label">Colour:<%= productData.colour %> </p>





            <p class="color-label">Size:
                <% productData.variant.forEach(variant => { %>
                    <button type="button" 
                            class="btn  size-button"
                            data-size="<%= variant.size %>"
                            style="height: 40px; width: 40px; border: 1px solid #000; margin-right: 5px; margin-left: 5px;">
                        <%= variant.size %>
                    </button>
                <% }); %>
                <button type="button" class="btn btn-light ms-5"
                    style="height: 40px; width: 40px; border: 1px solid #000; position: relative; margin-left: 0;">
                    <span
                        style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); font-weight: bold;">
                        <i class="fa-regular fa-heart" style="color: #000000;"></i>
                    </span>
                </button>
            </p>

            <button type="button" class="add-to-cart-btn mt-3"
                style="border: 1px solid #000; background-color: 8bb17f; height: 50px; width: 100%;">
                <span><i class="fa-solid fa-cart-plus" style="color: #000000;"></i></span> Add to Cart
            </button>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
        integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz"
        crossorigin="anonymous"></script>


    <script>



    



        document.addEventListener('DOMContentLoaded', function () {
        const sizeButtons = document.querySelectorAll('.size-button');

        sizeButtons.forEach(button => {
            button.addEventListener('click', function () {
              
                sizeButtons.forEach(btn => {
                    btn.classList.remove('btn-dark');
                });

               
                button.classList.add('btn-dark');
            });
        });
    });
    </script>









