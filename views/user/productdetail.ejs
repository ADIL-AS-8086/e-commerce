 addToCartBtn.addEventListener('click', function () {
  // Check if at least one size button is selected
  const selectedSize = document.querySelector('.size-button.btn-dark');
  if (!selectedSize) {
    // If no size is selected, show a Toastify message to the user
    Toastify({
      text: "Please select a size before adding to the cart.",
      className: "info",
      position: 'center',
      gravity: "top",
      duration: 3000,
      style: {
        background: "white",
        color: "#000",
        marginTop: "80px",
      }
    }).showToast();
    return;
  }

  const productId = '<%= productData._id %>';
  const size = selectedSize.getAttribute('data-size');

  try {
    fetch(`/user/add-to-cart/${productId}`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ size }),
    }).then(response => {
      if (response.ok) {
        // If the response is OK (success), show a success message
        showToast("Item added to the cart successfully!");
      } else {
        // If there's an error, show an error message
        showToast("Error adding item to the cart. Please try again.");
      }
    });
  } catch (error) {
    console.error('Error:', error);
  }
});

// Function to show Toastify message
function showToast(message) {
  Toastify({
    text: message,
    className: "success", // You can customize the class for styling
    position: 'center',
    gravity: "top",
    duration: 3000,
    style: {
      background: "white",
      color: "#000",
      marginTop: "80px",
    }
  }).showToast();
}


      function updateSizeButtons(quantity) {
        const sizeButtons = document.querySelectorAll('.size-button');

        sizeButtons.forEach(button => {
          button.disabled = quantity === 0 || parseInt(button.getAttribute('data-quantity')) < 1;
        });
      }


    });

